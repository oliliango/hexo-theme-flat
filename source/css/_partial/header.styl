#header
  background #fff
  margin 0 auto
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 1.2em
    line-height 1
    margin-top 10px

  #header-title
    margin 20px auto    
    a
      color #2D89EF
      &:hover
        color #2D89EF
        text-decoration none

  #main-nav
    background #2D89EF
    font-family font-title
    line-height 3.0em
    a
      color #fff
      &:hover
        color #fff
        text-decoration none
    ul
      list-style none
      li
        float left
        margin-left 30px